@model EmployeeManagementSystem.Models.Employee
 
@{
    ViewData["Title"] = "Search Employee";
    ViewData["ShowDashboardLink"] = true;
}
 
<h2>Search Employee</h2>
<form asp-action="SearchEmployee" method="post">
    <div class="form-group">
        <label>Search by Employee ID or Name</label>
        <input type="text" name="searchQuery" class="form-control" placeholder="Enter Employee ID or Name" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Search Employee</button>
</form>
 
@if (Model != null)
{
    <div>
        <h3>Employee Details</h3>
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Position:</strong> @Model.Position</p>
        <p><strong>Salary:</strong> @Model.Salary</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Department:</strong> @Model.Department</p>
        <p><strong>Date of Joining:</strong> @Model.DateOfJoining.ToShortDateString()</p>
    </div>
}
 
<a href="@Url.Action(User.IsInRole("Admin") ? "AdminDashboard" : "UserDashboard", "Employee")" class="btn btn-secondary mt-3">Return to Dashboard</a>
 