@model EmployeeManagementSystem.Models.Employee
 
@{
    ViewData["Title"] = "Add Employee";
    ViewData["ShowDashboardLink"] = true;
}
 
<h2>Add Employee</h2>
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Employee</button>
</form>
 
<a href="@Url.Action(User.IsInRole("Admin") ? "AdminDashboard" : "UserDashboard", "Employee")" class="btn btn-secondary mt-3">Return to Dashboard</a>
 