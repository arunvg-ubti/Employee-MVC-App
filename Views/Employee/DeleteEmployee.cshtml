@model EmployeeManagementSystem.Models.Employee
 
@{
    ViewData["Title"] = "Delete Employee";
    ViewData["ShowDashboardLink"] = true;
}
 
<h2>Delete Employee</h2>
<form asp-action="DeleteEmployee" method="post">
    <div class="form-group">
        <label asp-for="Id">Employee ID</label>
        <input asp-for="Id" class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger">Delete Employee</button>
</form>
 
<a href="@Url.Action(User.IsInRole("Admin") ? "AdminDashboard" : "UserDashboard", "Employee")" class="btn btn-secondary mt-3">Return to Dashboard</a>
 